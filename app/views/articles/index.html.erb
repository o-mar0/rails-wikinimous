<div class="container d-flex  justify-content-center">
  <h1>Articles</h1>

  <ul>
    <% @articles.each do |article| %>
      <li>
        <h1><%= link_to article.title, article_path(article) %><h1><%=  link_to '[X]', article_path(article), method: :delete, data: {confirm: 'are you sure ?'} %>
        <p><%= article.content %></p>
      </li>
    <% end %>
  </ul>
</div>
